<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.ClassesController"
      spacing="10">

    <Label text="Classes Management" />

    <HBox spacing="10">
        <TextField fx:id="classNameField" promptText="Class Name" />
        <Button text="Add" onAction="#handleAddClass" />
    </HBox>

    <TableView fx:id="classesTable">
        <columns>
            <TableColumn text="ID" prefWidth="50">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="classId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Name" prefWidth="150">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="className" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Update" onAction="#handleUpdateClass" />
        <Button text="Delete" onAction="#handleDeleteClass" />
    </HBox>

</VBox>
