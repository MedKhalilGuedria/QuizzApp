<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.QuizStudentController"
      spacing="10"
      alignment="CENTER"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <Label fx:id="quizNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="questionTextLabel" style="-fx-font-size: 16px;" />
    
    <VBox fx:id="choiceContainer" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 10;">
        <!-- Add styles for choiceContainer if needed -->
    </VBox>
    
    <Button text="Next Question" onAction="#nextQuestion" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" />
    
    <Label fx:id="scoreLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    
</VBox>