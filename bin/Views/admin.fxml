<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.AdminController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0; -fx-padding: 30;">

    <Label text="Admin Menu" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="Course Management" onAction="#handleCourseManagement"
            style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5px;"/>
    
    <Button text="Student Management" onAction="#handleStudentManagement"
            style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px;"/>
    
    <Button text="Teacher Management" onAction="#handleTeacherManagement"
            style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-color: #FFC107; -fx-text-fill: white; -fx-border-radius: 5px;"/>
    
    <Button text="Class Management" onAction="#handleClassManagement"
            style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-border-radius: 5px;"/>
</VBox>
